<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cornflower_blue"
    android:id="@+id/hfpclient_connect"
    tools:context="cy.app.bt.hfpclient.cyphon.HfpClientMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/signal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/stat_signal" />
        <ImageView
            android:id="@+id/battery"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="top"
            android:src="@drawable/stat_battery" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:visibility="visible"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/subscriberInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:visibility="visible"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/wbsStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:visibility="visible"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/inbandStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:visibility="visible"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_border">
            <RelativeLayout
                android:id="@+id/dev1_container"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:background="@color/light_grey"
                android:layout_alignParentLeft="true">
                <TextView
                    android:id="@+id/newdevice1text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="DEVICE 1"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <TextView
                    android:id="@+id/newdevice1name"
                    android:layout_below="@+id/newdevice1text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="Redmi"/>
                <TextView
                    android:id="@+id/newdisplaynumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:maxEms="14"
                    android:singleLine="true"
                    android:layout_below="@+id/newdevice1name"
                    android:text="+91-9900689254"/>
                <TextView
                    android:id="@+id/newtitletext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/newdisplaynumber"
                    android:text="on call"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dev2_container"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:background="@color/light_grey"
                android:layout_below="@id/dev1_container"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp">
                <TextView
                    android:id="@+id/newdevice2text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="DEVICE 2"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <TextView
                    android:id="@+id/newdevice2name"
                    android:layout_below="@+id/newdevice2text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="Samsung"/>
                <TextView
                    android:id="@+id/newdisplaynumber2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/newdevice2name"
                    android:ellipsize="end"
                    android:maxEms="14"
                    android:singleLine="true"
                    android:text="+91-9900689254"/>
                <TextView
                    android:id="@+id/newtitletext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/newdisplaynumber2"
                    android:text="on call"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/newedittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/carimage"
                android:layout_marginTop="100dp"
                android:inputType="phone"
                android:visibility="invisible"
                android:hint="Enter Number"/>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/newedittext"
                android:layout_toRightOf="@id/carimage"
                android:layout_marginRight="20dp">
                <TableRow>
                    <Button
                        android:id="@+id/newdial_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/dial"/>

                    <Button
                        android:id="@+id/newendcall_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_toRightOf="@id/newdial_button"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/end_call" />

                    <Button
                        android:id="@+id/newredial_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_toRightOf="@id/newendcall_button"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/redi"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_span="3">
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/call_control"
                        android:visibility="visible" />
                        android:id="@+id/newcall_control"
                    <Button
                        android:id="@+id/newdisconnect_button"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:text="@string/disconnect"
                        android:textSize="18dp"
                        android:visibility="invisible"
                        android:layout_weight="1"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/newenhanced_call_control"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/enhanced_call_control"
                        android:visibility="visible" />
                </TableRow>
            </TableLayout>


            <ImageView
                android:id="@+id/carimage"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/car_top"
                android:layout_centerInParent="true" />

            <ToggleButton
                android:id="@+id/newvr_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/dev2_container"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/vr_toggle"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:focusableInTouchMode="false"/>

        </RelativeLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/displaynumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_span="2"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/gray">
                <TextView
                    android:id="@+id/device1text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/device1"
                    android:layout_weight="1"
                    android:gravity="right" />
                <TextView
                    android:id="@+id/titletext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:gravity="left"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/displaynumber2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_span="2"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/device2text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="@string/device2"
                    android:layout_weight="1"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/titletext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:gravity="left"/>

            </TableRow>

        </TableLayout>

        <ListView
            android:id="@+id/call_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="10sp">
        </ListView>
        <EditText
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:visibility="invisible"
            android:hint="Enter Number"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/dial_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dial"
                    android:textSize="15dp"
                    android:visibility="invisible"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/redial_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/redial"
                    android:textSize="15dp"
                    android:visibility="invisible"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/call_control"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:visibility="invisible"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/enhanced_call_control"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:visibility="invisible"
                    android:layout_weight="1"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:stretchColumns="*">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:id="@+id/disconnect_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/disconnect"
                android:textSize="18dp"
                android:visibility="invisible"
                android:layout_weight="1"
                android:gravity="center"/>
            <Button
                android:id="@+id/endcall_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/endcall"
                android:textSize="18dp"
                android:visibility="invisible"
                android:layout_weight="1"
                android:gravity="center"/>
            <Button
                android:id="@+id/vr_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:visibility="visible"
                android:layout_weight="1"
                android:gravity="center"/>
            <Button
                android:id="@+id/swap_ui_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:text="@string/swap_ui"
                android:visibility="visible"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
</FrameLayout>
