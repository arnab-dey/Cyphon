<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cornflower_blue"
    android:id="@+id/hfpclient_connect"
    tools:context="cy.app.bt.hfpclient.cyphon.HfpClientMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/signal"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/stat_signal" />
        <ImageView
            android:id="@+id/battery"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="top"
            android:src="@drawable/stat_battery" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_border">

            <TextView
                android:id="@+id/operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/carimage"
                android:textSize="15dp"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:visibility="visible"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/subscriberInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/operator"
                android:layout_toEndOf="@id/carimage"
                android:textSize="15dp"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:visibility="visible"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/wbsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subscriberInfo"
                android:layout_toEndOf="@id/carimage"
                android:textSize="14dp"
                android:visibility="visible"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/inbandStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wbsStatus"
                android:layout_toEndOf="@id/carimage"
                android:textSize="14dp"
                android:visibility="visible"
                android:gravity="center_horizontal" />

            <RelativeLayout
                android:id="@+id/dev1_container"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:background="@color/light_grey"
                android:layout_alignParentLeft="true">
                <TextView
                    android:id="@+id/device1text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="DEVICE 1"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <TextView
                    android:id="@+id/device1name"
                    android:layout_below="@+id/device1text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true" />
                <TextView
                    android:id="@+id/displaynumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible"
                    android:ellipsize="end"
                    android:maxEms="14"
                    android:singleLine="true"
                    android:layout_below="@+id/device1name" />
                <TextView
                    android:id="@+id/titletext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/displaynumber" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dev2_container"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:background="@color/light_grey"
                android:layout_below="@id/dev1_container"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp">
                <TextView
                    android:id="@+id/device2text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="DEVICE 2"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <TextView
                    android:id="@+id/device2name"
                    android:layout_below="@+id/device2text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true" />
                <TextView
                    android:id="@+id/displaynumber2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/device2name"
                    android:visibility="visible"
                    android:ellipsize="end"
                    android:maxEms="14"
                    android:singleLine="true" />
                <TextView
                    android:id="@+id/titletext2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/displaynumber2" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/carimage"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="20dp"
                android:inputType="phone"
                android:visibility="invisible"
                android:hint="Enter Number"/>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edittext"
                android:layout_toRightOf="@id/carimage"
                android:layout_marginRight="20dp">
                <TableRow>
                    <Button
                        android:id="@+id/dial_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:background="@drawable/dial"/>

                    <Button
                        android:id="@+id/endcall_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_toRightOf="@id/dial_button"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:background="@drawable/end_call" />

                    <Button
                        android:id="@+id/redial_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_toRightOf="@id/endcall_button"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:background="@drawable/redi"/>
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_span="3">
                    <Button
                        android:id="@+id/call_control"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/call_control"
                        android:visibility="invisible"
                        android:layout_weight="1"
                        android:textSize="7dp"
                        android:gravity="bottom|center"/>

                    <ToggleButton
                        android:id="@+id/disconnect_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:gravity="bottom|center"
                        android:background="@drawable/hf_toggle"
                        android:textOn=""
                        android:textOff=""
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>
                    <Button
                        android:id="@+id/enhanced_call_control"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_gravity="bottom|center"
                        android:background="@drawable/enhanced_call_control"
                        android:visibility="invisible" />
                </TableRow>
            </TableLayout>


            <ImageView
                android:id="@+id/carimage"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/car_top"
                android:layout_centerInParent="true" />

            <ToggleButton
                android:id="@+id/vr_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/dev2_container"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/vr_toggle"
                android:visibility="visible"
                android:textOn=""
                android:textOff=""
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <Button
                android:id="@+id/swap_ui_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/vr_button"
                android:layout_below="@id/dev2_container"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:visibility="visible"
                android:text="SWAP"
                android:textSize="8dp" />

        </RelativeLayout>

        <ListView
            android:id="@+id/call_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textSize="10sp">
        </ListView>

    </LinearLayout>

</FrameLayout>
